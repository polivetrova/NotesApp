<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_16ssp"
    tools:context=".ui.noteItem.NoteItemFragmentEditable">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/edit_note_button_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:src="@drawable/ic_edit" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/note_name_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_16ssp"
        android:inputType="none"
        android:textSize="@dimen/_16ssp" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/note_date_created_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_16ssp"
        android:textSize="@dimen/_13ssp"
        android:textStyle="bold" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/note_description_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="start"
        android:inputType="none"
        android:textSize="@dimen/_13ssp" />

</LinearLayout>